<Window x:Class="donely_Inspilab.Pages.Settings.EditProfilePictureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:donely_Inspilab.Pages.Settings"
        mc:Ignorable="d"
        Title="Edit Profile Picture" Height="450" Width="600">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Border BorderBrush="Black" BorderThickness="3" CornerRadius="5" Width="180" Height="180" Margin="10,10,10,10">
                <Image x:Name="imgProfilePicture"  Source="/Assets/ProfilePictures/profilePicture.jpg" />
            </Border>
            <Button Content="Upload Image" Click="UploadImage_Click" Style="{StaticResource BlueButton}" Margin="10" HorizontalAlignment="Center" Width="182" Height="38"/>
            <Button Content="Save Image" Click="SaveImage_Click" Style="{StaticResource YellowButton}" Margin="10" HorizontalAlignment="Center" Width="181" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
