<Page x:Class="donely_Inspilab.Pages.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header and Close -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Settings"
               FontSize="24"
               FontWeight="Bold"
               VerticalAlignment="Center"
               Grid.Column="0" />

        <Button Style="{StaticResource CloseButton}" Click="GoBackToHome"/>


        <!-- Button Stack -->
        <StackPanel Grid.Row="1" Margin="40,85,453,20">
            <Button Content="Change pfp" Style="{StaticResource BlueButton}" Width="200" Click="GoToChangeInfo"/>
            <Button Content="Change password" Style="{StaticResource BlueButton}" Width="200" Click="GoToChangePassword"/>
            <Button Content="Delete Account" Style="{StaticResource RedButton}" Width="200" Click="GoToDeleteAccount"/>
        </StackPanel>
    </Grid>
</Page>
