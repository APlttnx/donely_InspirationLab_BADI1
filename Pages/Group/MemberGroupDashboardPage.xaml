<Page x:Class="donely_Inspilab.Pages.Group.MemberGroupDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages.Group"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1600"
      Title="GroupDashboardPage">

    <Grid HorizontalAlignment="Center" Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource CloseButton}" Grid.Column="2" Grid.Row="0" Click="GoBack_Click"/>
        <Label Content="Group Dashboard" Grid.Row="1" Grid.Column="1"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <Border BorderThickness="1" CornerRadius="3" BorderBrush="Black" Width="100" Height="100">
                <Image Name="imgGroupImage" Source="/Assets/GroupImages/default.png"/>
            </Border>
            <Label Name ="lblGroupName" Content="[GROUPNAME]" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Ongoing Tasks:" Grid.Column="0"/>

            
            
            <ListView  x:Name="lsvMemberTasks" MinHeight="150"  Grid.Row="1" Grid.Column="0" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,0" MaxHeight="600">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Task" Width="200" DisplayMemberBinding="{Binding Task.NameDisplay}" />
                        <GridViewColumn Header="Description" Width="400" DisplayMemberBinding="{Binding Task.Description}" />
                        <GridViewColumn Header="Reward" Width="80" DisplayMemberBinding="{Binding Task.Reward}" />
                        <GridViewColumn Header="Time Left" Width="120" DisplayMemberBinding="{Binding TimeLeft}"/>
                        <GridViewColumn Header="Deadline" Width="80" DisplayMemberBinding="{Binding DeadlineDisplay}" />
                        <GridViewColumn Header="Issued On" Width="90" DisplayMemberBinding="{Binding IssueDateDisplay}" />
                        <GridViewColumn Header="Success" Width="46">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✅"
                                  ToolTip="Manage Tasks of member"
                                  FontSize="16"
                                  Width="20" Height="20"
                                  Padding="0" Margin="0"
                                  BorderThickness="0"
                                  Background="white"
                                  Foreground="Green"
                                  Click="SucceedTask_Click" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Fail" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌"
                                  ToolTip="Manage Tasks of member"
                                  FontSize="16"
                                  Width="20" Height="20"
                                  Padding="0" Margin="0"
                                  BorderThickness="0"
                                  Background="white"
                                  Foreground="OrangeRed"
                                  Click="FailTask_Click" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <Button Style="{StaticResource BlueButton}" Grid.Column="1" Content="Shop" Grid.Row="0" HorizontalAlignment="Right"/>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                    <Label Content="Coins: " />
                    <Label Name="lblCurrency" Content="XX"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,30,0,30" Width="auto">
            <Label Content="Other Members:" Grid.Row="4" Grid.Column="1"/>
            <ListView  x:Name="lsvMembersOverview" MinHeight="150"  Grid.Row="1" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Width="320" HorizontalAlignment="Left" MaxHeight="250">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Member" Width="170" DisplayMemberBinding="{Binding User.Name}" />
                        <GridViewColumn Header="Balance" Width="60" DisplayMemberBinding="{Binding Currency}" />
                        <GridViewColumn Header="Joined" Width="80" DisplayMemberBinding="{Binding Joined, StringFormat='{}{0:dd-MM-yyyy}'}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        

    </Grid>
</Page>
