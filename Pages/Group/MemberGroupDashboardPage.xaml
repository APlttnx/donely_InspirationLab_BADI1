<Page x:Class="donely_Inspilab.Pages.Group.MemberGroupDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages.Group"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="800"
      Title="GroupDashboardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource CloseButton}" Grid.Column="2" Grid.Row="0" Click="Button_Click"/>
        <Label Content="Group Dashboard" Grid.Row="1" Grid.Column="1"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <Border BorderThickness="1" CornerRadius="3" BorderBrush="Black" Width="100" Height="100">
                <Image Name="imgGroupImage" Source="/Assets/GroupImages/default.png"/>
            </Border>
            <Label Name ="lblGroupName" Content="[GROUPNAME]" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Ongoing Tasks:" Grid.Column="0"/>

            <Button Style="{StaticResource BlueButton}" Grid.Column="1" Content="Shop" Grid.Row="0" HorizontalAlignment="Right"/>
            
            <ListView  x:Name="lsvPendingTasks" MinHeight="150"  Grid.Row="1" Grid.Column="0" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Task" Width="200" DisplayMemberBinding="{Binding Task.NameDisplay}" />
                        <GridViewColumn Header="Reward" Width="80" DisplayMemberBinding="{Binding Task.Reward}" />
                        <GridViewColumn Header="Deadline" Width="80" DisplayMemberBinding="{Binding DeadlineDisplay}" />
                        <GridViewColumn Header="Completed On" Width="90" DisplayMemberBinding="{Binding IssueDateDisplay}" />
                        <GridViewColumn Header="" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✅"
                                  ToolTip="Manage Tasks of member"
                                  FontSize="16"
                                  Width="20" Height="20"
                                  Padding="0" Margin="0"
                                  BorderThickness="0"
                                  Background="white"
                                  Foreground="Green"
                                  Click="SucceedTask_Click" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌"
                                  ToolTip="Manage Tasks of member"
                                  FontSize="16"
                                  Width="20" Height="20"
                                  Padding="0" Margin="0"
                                  BorderThickness="0"
                                  Background="white"
                                  Foreground="OrangeRed"
                                  Click="FailPendingTask_Click" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">
                <Label Content="Currency: " />
                <Label Name="lblCurrency" Content="XX"/>
            </StackPanel>
            

        </Grid>
        

    </Grid>
</Page>
