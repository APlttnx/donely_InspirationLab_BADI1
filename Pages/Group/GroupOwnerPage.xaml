<Page x:Class="donely_Inspilab.Pages.Group.GroupOwnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages.Group"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupOwnerPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource CloseButton}" Grid.Column="2" Click="ToHomePage_Click"/>
        <ListView  x:Name="lsvMembersOverview" MinHeight="150"  Grid.Row="1" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Member" Width="130" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Balance" Width="60" DisplayMemberBinding="{Binding Currency}" />
                    <GridViewColumn Header="Joined" Width="100" DisplayMemberBinding="{Binding Joined}" />
                    <GridViewColumn Header="Active Tasks" Width="100" DisplayMemberBinding="{Binding ActiveTasks}" />
                    <GridViewColumn Header="Pending Tasks" Width="100" DisplayMemberBinding="{Binding PendingTasks}" />
                    <GridViewColumn Header="Completed Tasks" Width="100" DisplayMemberBinding="{Binding CompletedTasks}" />
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="16,0" HorizontalAlignment="Center">
            <Button Content="Edit Group" Style="{StaticResource RedButton}" Grid.Row="2" Grid.Column="1" Height="35" HorizontalAlignment="Left" Click="ToEditGroupWindow_Click"/>
            <Button Content="Invite Code" Style="{StaticResource YellowButton}" Grid.Row="2" Grid.Column="1" Height="35" HorizontalAlignment="Left" Click="ToInviteCodeWindow_Click"/>
            <Button Content="Details" Style="{StaticResource BlueButton}" Grid.Row="2" Grid.Column="1" Height="35" HorizontalAlignment="Left" Click="ToMemberDetailPage_Click"/>
        </StackPanel>
    </Grid>
</Page>
