<Page x:Class="donely_Inspilab.Pages.Group.GroupCreationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages.Group"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="550"
      Title="GroupCreationPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" MinWidth="300"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="Create Group"
               Grid.Row="0"
               Grid.Column="0"
                />
        <Button Style="{StaticResource CloseButton}" Grid.Column="2" Click="GoToHome"/>

        <Label Content="Name: "
               Grid.Row="1"
               Grid.Column="0"/>
        
        <TextBox Name="txtName"
                 Grid.Row="1"
                 Grid.Column="1"
            />

        <Label Content="Group Picture: "
           Grid.Row="2"
           Grid.Column="0"/>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <Image x:Name="UploadedImage" Width="300" Height="300" Margin="10"/>
            <Button Content="Upload Image" Click="UploadImage_Click" Style="{StaticResource YellowButton}" Margin="10" HorizontalAlignment="Right"/>
        </StackPanel>

        <Label Content="Rewards: "
           Grid.Row="3"
           Grid.Column="0"/>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <ListView  x:Name="lsvShopItems" Margin="24,10,10,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Reward" Width="auto" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Price" Width="auto" DisplayMemberBinding="{Binding Price}" />
                        <GridViewColumn Header="Limit" Width="auto" DisplayMemberBinding="{Binding Limit}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Add Reward" Click="AddReward_Click" Style="{StaticResource BlueButton}"/>
        </StackPanel>



    </Grid>
</Page>
