<Window x:Class="donely_Inspilab.Pages.Admin.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change User (Admin)" Height="538" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20,20,20,14">
        <!-- Close Button -->
        <Button Content="X"
                Style="{StaticResource CloseButton}"
                Click="Close_Click" Height="33" Width="40"/>

        <!-- Content -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >
            <TextBlock Text="Change User"
                       FontSize="22"
                       FontWeight="Bold"
                       FontFamily="QuickSand"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <Label Content="Name:"/>
                <TextBox x:Name="TxtName" Background="#F2BAC9" BorderThickness="0" Padding="10" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <Label Content="E-mail:"/>
                <TextBox x:Name="TxtEmail" Background="#F2BAC9" BorderThickness="0" Padding="10" />
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label Content="Phone:"/>
                <TextBox x:Name="TxtPhone" Background="#F2BAC9" BorderThickness="0" Padding="10" />
            </StackPanel>

            <Button Content="Change"
                    Style="{StaticResource YellowButton}"
                    Click="ChangeUser_Click"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
