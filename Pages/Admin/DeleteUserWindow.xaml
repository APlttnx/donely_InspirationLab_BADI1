<Window x:Class="donely_Inspilab.Pages.Admin.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete User (Admin)"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Close Button -->
        <Button Content="X"
                Click="Cancel_Click"
                Style="{StaticResource CloseButton}"
                Width="39" Height="40"
                Grid.Row="0" Grid.RowSpan="2" Margin="0,-15,-17,0"/>

        <!-- Confirmation Text -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Delete User"
                       FontWeight="Bold"
                       FontSize="24"
                       FontFamily="QuickSand"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <TextBlock x:Name="TxtConfirmation"
                       Text="Are you sure you want to delete this user?"
                       FontSize="16"
                       TextAlignment="Center"
                       Margin="10"/>
        </StackPanel>

        <!-- Delete Button -->
        <Button Content="Delete"
                Grid.Row="2"
                Click="Delete_Click"
                Style="{StaticResource YellowButton}"
                Width="150"
                HorizontalAlignment="Center"
                Margin="10"/>
    </Grid>
</Window>
