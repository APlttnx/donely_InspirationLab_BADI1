<Page x:Class="donely_Inspilab.Pages.Task.ManageMemberTasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages.Task"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1500"
      Width="1500"
      Title="Member Tasks"
      Margin="10,10,10,10">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource CloseButton}" Grid.Column="4" Click="GoBack_click" HorizontalAlignment="Left" Margin="43,1,0,0" />

        <Label Name="lblMemberName" Content="Tasks" Grid.Column="2" HorizontalAlignment="Center"/>

        <Label Content="Active" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1"/>

        <ListView  x:Name="lsvActiveTasks" MinHeight="150"  Grid.Row="2" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Task" Width="150" DisplayMemberBinding="{Binding User.Name}" />
                    <GridViewColumn Header="Reward" Width="50" DisplayMemberBinding="{Binding Reward}" />
                    <GridViewColumn Header="Deadline" Width="80" DisplayMemberBinding="{Binding Deadline}" />
                    <GridViewColumn Header="Issued On" Width="80" DisplayMemberBinding="{Binding Issued}" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView  x:Name="lsvPendingTasks" MinHeight="150"  Grid.Row="2" Grid.Column="2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Task" Width="150" DisplayMemberBinding="{Binding User.Name}" />
                    <GridViewColumn Header="Reward" Width="80" DisplayMemberBinding="{Binding Reward}" />
                    <GridViewColumn Header="Deadline" Width="80" DisplayMemberBinding="{Binding Deadline}" />
                    <GridViewColumn Header="Completed On" Width="90" DisplayMemberBinding="{Binding Issued}" />
                    <GridViewColumn Header="" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✅"
                                        ToolTip="Manage Tasks of member"
                                        FontSize="16"
                                        Width="20" Height="20"
                                        Padding="0" Margin="0"
                                        BorderThickness="0"
                                        Background="white"
                                        Foreground="Green"
                                        Click="ManageTasksButton_Click" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="❌"
                                        ToolTip="Manage Tasks of member"
                                        FontSize="16"
                                        Width="20" Height="20"
                                        Padding="0" Margin="0"
                                        BorderThickness="0"
                                        Background="white"
                                        Foreground="OrangeRed"
                                        Click="ManageTasksButton_Click" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Pending" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="1"/>

        <Label Content="Completed" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="1"/>

        <ListView  x:Name="lsvCompletedTasks" MinHeight="150"  Grid.Row="2" Grid.Column="3" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Task" Width="150" DisplayMemberBinding="{Binding User.Name}" />
                    <GridViewColumn Header="Reward" Width="80" DisplayMemberBinding="{Binding Reward}" />
                    <GridViewColumn Header="Issued" Width="80" DisplayMemberBinding="{Binding Deadline}" />
                    <GridViewColumn Header="Completed On" Width="90" DisplayMemberBinding="{Binding Issued}" />
                    <GridViewColumn Header="Result" Width="80" DisplayMemberBinding="{Binding Issued}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
