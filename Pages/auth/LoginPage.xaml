<Page x:Class="donely_Inspilab.Pages.auth.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="lblEmail" Content="Emailaddress: " Grid.Row="1" Grid.Column="0"/>
        <TextBox Name="txtEmail" Grid.Row="1" Grid.Column="1"/>
        <Label Name="lblPassword" Content="Password: " Grid.Row="2" Grid.Column="0"/>
        <PasswordBox Name="txtPassword" Grid.Row="2" Grid.Column="1"/>
        <StackPanel  HorizontalAlignment="Right" Orientation="Horizontal" Grid.Column="1" Grid.Row="3">
            <Button Content="Login" x:Name="btnLogin" Style="{StaticResource RedButton}" Click="btnLogin_click"/>
            <Button Content="Return" x:Name="btnReturn" Style="{StaticResource RedButton}" Click="ReturnToWelcome"/>
        </StackPanel>
        <Label Name ="lblError" Grid.Column="1" Content="" Grid.Row="4" Foreground="red"/>

    </Grid>
</Page>
