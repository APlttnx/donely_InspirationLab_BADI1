<Page x:Class="donely_Inspilab.Pages.auth.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donely_Inspilab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="RegisterPage">

    <Grid>
        <Border Width="700"
                Height="Auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Padding="30"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Source="/Assets/Images/Donely_Logo_Transparant.png"
                Margin="0,-36,0,48"
                 HorizontalAlignment="Center" Width="168"/>

                <!-- Close Button -->
                <Button Style="{StaticResource CloseButton}"
                        Width="43"
                        Height="38"
                        Click="GoBack"/>

                <!-- Title -->
                <TextBlock Text="Welcome to Donely"
                           FontSize="28"
                           FontWeight="Bold"
                           FontFamily="QuickSand"
                           HorizontalAlignment="Center"
                           Margin="0,81,0,62"
                           Grid.Row="0"/>
                <TextBlock
                           FontSize="19"
                           FontWeight="Light"
                           FontFamily="QuickSand"
                           HorizontalAlignment="Center"
                           Margin="0,118,0,25"
                           Grid.Row="0" Text="Get started - it's free. No credit card needed."/>

                <!-- Name -->
                <TextBlock Text="Name:"
                           FontSize="19"
                           FontFamily="QuickSand"
                           FontWeight="SemiBold"
                           Margin="169,0,0,5"
                           Grid.Row="1"
                           HorizontalAlignment="Left"/>
                <TextBox x:Name="txtName"
                         Height="30"
                         Grid.Row="2"
                         Margin="0,0,0,10"
                         HorizontalAlignment="Center"/>

                <!-- Email -->
                <TextBlock Text="E-mail:"
                           FontSize="19"
                           FontFamily="QuickSand"
                           FontWeight="SemiBold"
                           Margin="169,10,-169,5"
                           Grid.Row="3"/>
                <TextBox x:Name="txtEmail"
                         Height="30"
                         Grid.Row="4"
                         Margin="0,0,0,10"
                         HorizontalAlignment="Center"/>

                <!-- Tel -->
                <TextBlock Text="Telephone Number:"
                           FontSize="19"
                           FontFamily="QuickSand"
                           FontWeight="SemiBold"
                           Margin="169,8,-169,8"
                           Grid.Row="5"/>
                <TextBox x:Name="txtTelnr"
                         Height="30"
                         Grid.Row="6"
                         Margin="0,0,0,10"
                         HorizontalAlignment="Center"/>

                <!-- Password Section -->
                <StackPanel Grid.Row="7" Margin="0,10,0,0">
                    <TextBlock Text="Password:"
                               FontSize="19"
                               FontFamily="QuickSand"
                               FontWeight="SemiBold" Width="300" Height="27"
                               />
                    <PasswordBox x:Name="txtPassword"
                                 Height="30"
                                 Margin="0,0,0,10"
                                 HorizontalAlignment="Center"/>

                    <TextBlock Text="Confirm Password:"
                               FontSize="19"
                               FontFamily="QuickSand"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5" Width="301"/>
                    <PasswordBox x:Name="txtConfirmPassword"
                                 Height="30"
                                 Margin="0,0,0,20"
                                 HorizontalAlignment="Center"/>

                    <!-- Register Button -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Register"
                                Width="143"
                                Style="{StaticResource YellowButton}"
                                Margin="5"
                                Click="btnRegister_click" Height="39"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
