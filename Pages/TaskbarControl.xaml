<UserControl x:Class="donely_Inspilab.Pages.TaskbarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="125" Background="White">
    <DockPanel LastChildFill="True">
        <Image Source="/Assets/Images/Donely_Logo_Transparant.png" Margin="20,-20,0,-20" DockPanel.Dock="Left" Height="166" Width="173"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="40,0">
            <!-- Not Logged In -->
            <StackPanel x:Name="GuestButtons" Orientation="Horizontal" Visibility="Visible">
                <Button Content="Login" Click="Login_Click" Style="{StaticResource BaseButtonStyle}" Height="55"/>
                <Button Content="Register" Click="Register_Click" Style="{StaticResource BaseButtonStyle}" Height="55"/>
            </StackPanel>

            <!-- Logged In -->
            <StackPanel x:Name="UserButtons" Orientation="Horizontal" Visibility="Collapsed">
                <Button Content="Settings" Margin="5,0" Click="Settings_Click" Style="{StaticResource BaseButtonStyle}" Height="55"/>
                <Button Content="Log out" Margin="5,0" Click="Logout_Click" Style="{StaticResource BaseButtonStyle}" Height="55"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>