<Window x:Class="donely_Inspilab.Pages.Shop.EditItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Shop Item" Height="650" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20,20,20,14">
        <!-- Close Button -->
        <Button Content="X"
                Style="{StaticResource CloseButton}"
                Click="Close_Click" Height="34" Width="45" Margin="0,-19,-23,0"/>

        <!-- Content -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="260" >
            <TextBlock Text="Edit Shop Item"
                       FontSize="22"
                       FontWeight="Bold"
                       FontFamily="QuickSand"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <Label Content="Name:"/>
                <TextBox x:Name="TxtName" Background="#F2BAC9" BorderThickness="0" Padding="10" Height="50" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <Label Content="Description:"/>
                <TextBox x:Name="TxtDescription" Background="#F2BAC9" BorderThickness="0" Padding="10" Height="50" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <Label Content="Price:"/>
                <TextBox x:Name="TxtPrice" Background="#F2BAC9" BorderThickness="0" Padding="10" Height="50" />
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label Content="Limit:"/>
                <TextBox x:Name="TxtLimit" Background="#F2BAC9" BorderThickness="0" Padding="10" Height="50" />
            </StackPanel>

            <Button Content="Save Changes"
                    Style="{StaticResource YellowButton}"
                    Click="SaveChanges_Click"
                    HorizontalAlignment="Center" Width="188" Height="38"/>
        </StackPanel>
    </Grid>
</Window>
