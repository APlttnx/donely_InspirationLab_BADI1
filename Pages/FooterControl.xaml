<UserControl x:Class="donely_Inspilab.Pages.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0" Margin="20,0">
            <Image Source="/Assets/Images/Donely_Logo_Transparant.png" Height="70" Width="70"/>
        </StackPanel>

        <!-- Centered Footer Text -->
        <TextBlock Text="@Donely made by Arnout en Anass"
                   FontFamily="QuickSand"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Column="1"
                   Foreground="Gray"/>

        <!-- Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Margin="20,0">
            <!-- Not Logged In -->
            <StackPanel x:Name="GuestButtons" Visibility="Visible">
                <Button Content="Login" Click="Login_Click" Style="{StaticResource BaseButtonStyle}" Height="30" Width="100" />
                <Button Content="Sign Up" Click="Register_Click" Style="{StaticResource BaseButtonStyle}" Height="30" Width="100"/>
            </StackPanel>

            <!-- Logged In -->
            <StackPanel x:Name="UserButtons" Visibility="Collapsed">
                <Button Content="Settings" Click="Settings_Click" Style="{StaticResource BaseButtonStyle}" Height="30" Width="100"/>
                <Button Content="Log out" Click="Logout_Click" Style="{StaticResource BaseButtonStyle}" Height="30" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
